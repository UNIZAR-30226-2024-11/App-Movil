<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:id="@+id/generalGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <GridLayout
            android:id="@+id/tituloGridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:alignmentMode="alignMargins"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/tituloTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SALA:    "
                android:textSize="50sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/numeroTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textSize="50sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

        </GridLayout>
        <GridLayout
            android:id="@+id/playersGridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">




            <GridLayout
                android:id="@+id/player1GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <ImageView
                    android:id="@+id/avatarplayer1ImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/perfil1"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/nombreplayer1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nombre jugador"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />


            </GridLayout>

            <GridLayout
                android:id="@+id/player2GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <ImageView
                    android:id="@+id/avatarplayer2ImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/perfil2"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/nombreplayer2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nombre jugador2"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

            </GridLayout>

            <GridLayout
                android:id="@+id/player3GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <ImageView
                    android:id="@+id/avatarplayer3ImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/perfil3"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/nombreplayer3TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nombre jugador3"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />


            </GridLayout>

        </GridLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ININCIAR PARTIDA"
            android:id="@+id/iniciarButton"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/lavender"
            />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>