                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/avatar3Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        android:text="COMPRAR" />

                </GridLayout>

                <GridLayout
                    android:id="@+id/avatar4SubGridLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:columnCount="1"
                    android:rowCount="3"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">


                    <ImageView
                        android:id="@+id/avatar4ImageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/perfil4"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/avatar4TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 monedas"
                        android:textColor="#000000"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/avatar4Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        android:text="COMPRAR" />


                </GridLayout>

                <GridLayout
                    android:id="@+id/avatar5SubGridLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:columnCount="1"
                    android:rowCount="3"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1">


                    <ImageView
                        android:id="@+id/avatar5ImageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/perfil5"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/avatar5TextView"
                        android:layout_width="wrap_content"
