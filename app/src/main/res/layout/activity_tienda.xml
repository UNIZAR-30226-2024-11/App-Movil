<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Contenido principal con degradado de naranja a rojo -->
        <RelativeLayout
            android:id="@+id/backgroundLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_cartas_vertical"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/backArrow"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/flecha" />

            <!-- Título de la tienda -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tienda"
                android:textSize="50sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

            <!-- Sección de Avatares -->
            <TextView
                android:id="@+id/avatarsTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avatares"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_below="@id/titleTextView"
                android:layout_marginTop="10dp"/>

            <!-- GridLayout para los avatares -->
            <GridLayout
                android:id="@+id/avatarsGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatarsTitleTextView"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <!-- Imágenes de avatares -->
                <ImageView
                    android:id="@+id/avatar1ImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/perfil1"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/avatar2ImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/perfil2"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/avatar3ImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/perfil3"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/avatar4ImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/perfil4"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/avatar5ImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/perfil5"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/avatar6ImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/perfil6"
                    android:layout_margin="10dp"/>

            </GridLayout>

            <!-- Sección de Barajas -->

            <!-- Imágenes de barajas -->

            <TextView
                android:id="@+id/decksTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barajas"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@id/avatarsGridLayout"
                android:layout_marginTop="27dp" />

            <GridLayout
                android:id="@+id/decksGridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/decksTitleTextView"
                android:columnCount="2"
                android:rowCount="1"
                android:alignmentMode="alignMargins"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <!-- Imágenes de barajas -->
                <ImageView
                    android:id="@+id/deck1ImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/baraja1" />

                <!-- Agrega aquí las imágenes de las barajas restantes siguiendo el mismo patrón -->

            </GridLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
